<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:layout_margin="50dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:backgroundTint="#1A1A1A"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ImageView
    android:id="@+id/car"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/car"
    android:backgroundTint="#fff"
    android:layout_width="70dp"
    android:layout_height="40dp"/>
        <FrameLayout
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="60dp">
            <ImageButton
                android:id="@+id/call"
                android:background="#35A853"
                android:layout_width="120dp"
                android:layout_height="60dp"/>
            <ImageView
                android:background="@drawable/call"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </FrameLayout>
   <TextView
       android:id="@+id/userid"
       android:layout_below="@+id/car"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="30dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/drop_location"
            android:layout_below="@+id/userid"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/amount"
            android:layout_below="@+id/drop_location"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/journey_type"
            android:layout_below="@+id/amount"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/vehicle_type"
            android:layout_below="@+id/journey_type"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/driver_no"
            android:layout_below="@+id/vehicle_type"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/track_driver"
            android:text="Track driver"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:backgroundTint="#35A853"
            android:background="@drawable/circular_edittext"
            android:layout_below="@+id/driver_no"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

</RelativeLayout>