<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.googultaxi.taxiuser.Otp.OtpActivity">
<ImageView
    android:id="@+id/logo"
    android:background="@drawable/logoicon"
    android:layout_width="150dp"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="10dp"
    android:layout_height="150dp"/>
    <TextView
        android:id="@+id/text"
        android:text="  Otp has been send to your Mobile number.\n  Please check and enter it."
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:fontFamily="@font/medium"
        android:layout_below="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/otp"
        android:layout_below="@+id/text"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:hint="Enter Otp"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textColorHint="#fff"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:backgroundTint="#000"
        android:singleLine="true"
        android:background="@drawable/circular_edittext"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Submit"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:backgroundTint="#35A853"
        android:fontFamily="@font/semibold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_circular_button"
        android:layout_alignParentBottom="true"
        />
    <ProgressBar
    android:id="@+id/progressbar"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:visibility="gone"
    android:layout_height="wrap_content"/>

</RelativeLayout>
