<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img"
        android:background="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/username"
        android:textAlignment="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/mobile_no"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/username"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/change_no"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/mobile_no"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#35A853"
        android:text="Change mobile number"
        android:textColor="#ffffff"
        android:background="@drawable/circular_edittext"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:text="Changing your mobileno is deactivate\n your current account.Please make sure\n that is ok for you."
        android:textSize="20dp"
        android:fontFamily="@font/medium"
        android:layout_marginTop="30dp"


        android:layout_below="@id/change_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>