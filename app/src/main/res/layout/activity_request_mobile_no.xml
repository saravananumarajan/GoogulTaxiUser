<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.googultaxi.taxiuser.Otp.RequestMobileNo">
<ImageView
    android:id="@+id/logo"
    android:background="@drawable/logoicon"
    android:layout_marginTop="100dp"
    android:layout_centerHorizontal="true"
    android:layout_width="120dp"
    android:layout_height="120dp"
/>
    <EditText
        android:id="@+id/mobile_no"
        android:layout_below="@+id/logo"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:hint="Enter the mobile no"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textColorHint="#fff"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:backgroundTint="#000"
        android:singleLine="true"
        android:background="@drawable/circular_edittext"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Submit"
        android:fontFamily="@font/semi_bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:backgroundTint="#35A853"
        android:background="@drawable/rounded_circular_button"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
